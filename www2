    <script>
        // –ü–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏–µ —Ç–µ–º—ã
        const darkBtn = document.getElementById('darkBtn');
        const lightBtn = document.getElementById('lightBtn');
        const body = document.body;
        
        darkBtn.addEventListener('click', () => {
            body.classList.remove('light-theme');
            darkBtn.classList.add('active');
            lightBtn.classList.remove('active');
            localStorage.setItem('theme', 'dark');
        });
        
        lightBtn.addEventListener('click', () => {
            body.classList.add('light-theme');
            lightBtn.classList.add('active');
            darkBtn.classList.remove('active');
            localStorage.setItem('theme', 'light');
        });
        
        // –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–Ω–æ–π —Ç–µ–º—ã
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme === 'light') {
            body.classList.add('light-theme');
            lightBtn.classList.add('active');
            darkBtn.classList.remove('active');
        }
        
        // –ß–∞—Å—ã
        function updateClock() {
            const now = new Date();
            const seconds = now.getSeconds();
            const mins = now.getMinutes();
            const hours = now.getHours() % 12;
            
            const secondHand = document.querySelector('.second-hand');
            const minHand = document.querySelector('.min-hand');
            const hourHand = document.querySelector('.hour-hand');
            
            const secondsDeg = ((seconds / 60) * 360) + 90;
            const minsDeg = ((mins / 60) * 360) + ((seconds/60)*6) + 90;
            const hoursDeg = ((hours / 12) * 360) + ((mins/60)*30) + 90;
            
            secondHand.style.transform = `rotate(${secondsDeg}deg)`;
            minHand.style.transform = `rotate(${minsDeg}deg)`;
            hourHand.style.transform = `rotate(${hoursDeg}deg)`;
        }
        
        setInterval(updateClock, 1000);
        updateClock();
        
        // –ö–∞–ª–µ–Ω–¥–∞—Ä—å
        const weatherCalendar = document.getElementById('weatherCalendar');
        const monthCalendar = document.getElementById('monthCalendar');
        const closeCalendar = document.getElementById('closeCalendar');
        const currentDateElement = document.getElementById('current-date');
        const updateTimeElement = document.getElementById('update-time');
        
        // –û–±–Ω–æ–≤–ª—è–µ–º —Ç–µ–∫—É—â—É—é –¥–∞—Ç—É
        function updateDate() {
            const now = new Date();
            const options = { weekday: 'long', day: 'numeric', month: 'long' };
            currentDateElement.textContent = now.toLocaleDateString('ru-RU', options);
        }
        
        updateDate();
        
        // –í—Ä–µ–º—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è –ø–æ–≥–æ–¥—ã
        function updateWeatherTime() {
            const now = new Date();
            const hours = now.getHours().toString().padStart(2, '0');
            const minutes = now.getMinutes().toString().padStart(2, '0');
            updateTimeElement.textContent = `—Å–µ–≥–æ–¥–Ω—è –≤ ${hours}:${minutes}`;
        }
        
        updateWeatherTime();
        
        weatherCalendar.addEventListener('click', function() {
            if (!this.classList.contains('expanded')) {
                this.classList.add('expanded');
                closeCalendar.style.display = 'block';
                generateMonthCalendar();
            }
        });
        
        closeCalendar.addEventListener('click', function(e) {
            e.stopPropagation();
            weatherCalendar.classList.remove('expanded');
            this.style.display = 'none';
        });
        
        function generateMonthCalendar() {
            const now = new Date();
            const year = now.getFullYear();
            const month = now.getMonth();
            const daysInMonth = new Date(year, month + 1, 0).getDate();
            const firstDay = new Date(year, month, 1).getDay();
            
            monthCalendar.innerHTML = '';
            monthCalendar.style.display = 'grid';
            
            // –î–Ω–∏ –Ω–µ–¥–µ–ª–∏
            const days = ['–ü–Ω', '–í—Ç', '–°—Ä', '–ß—Ç', '–ü—Ç', '–°–±', '–í—Å'];
            days.forEach(day => {
                const dayEl = document.createElement('div');
                dayEl.classList.add('month-day');
                dayEl.textContent = day;
                dayEl.style.fontWeight = 'bold';
                monthCalendar.appendChild(dayEl);
            });
            
            // –ü—É—Å—Ç—ã–µ —è—á–µ–π–∫–∏ –¥–ª—è –Ω–∞—á–∞–ª–∞ –º–µ—Å—è—Ü–∞
            for (let i = 0; i < (firstDay === 0 ? 6 : firstDay - 1); i++) {
                const empty = document.createElement('div');
                empty.classList.add('month-day');
                monthCalendar.appendChild(empty);
            }
            
            // –î–Ω–∏ –º–µ—Å—è—Ü–∞
            const today = now.getDate();
            for (let day = 1; day <= daysInMonth; day++) {
                const dayEl = document.createElement('div');
                dayEl.classList.add('month-day');
                dayEl.textContent = day;
                
                // –ü–æ–º–µ—á–∞–µ–º –≤—ã—Ö–æ–¥–Ω—ã–µ
                const dayOfWeek = new Date(year, month, day).getDay();
                if (dayOfWeek === 0 || dayOfWeek === 6) {
                    dayEl.classList.add('weekend');
                }
                
                // –ü–æ–º–µ—á–∞–µ–º —Å–µ–≥–æ–¥–Ω—è—à–Ω–∏–π –¥–µ–Ω—å
                if (day === today) {
                    dayEl.classList.add('today');
                }
                
                monthCalendar.appendChild(dayEl);
            }
        }
        
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –≥—Ä–∞—Ñ–∏–∫–æ–≤ (—É–ø—Ä–æ—â–µ–Ω–Ω–∞—è –≤–µ—Ä—Å–∏—è)
        function initCharts() {
            const coins = ['btc', 'eth', 'xaut', 'ton', 'not'];
            coins.forEach(coin => {
                const canvas = document.getElementById(`${coin}Chart`);
                const ctx = canvas.getContext('2d');
                const width = canvas.width;
                const height = canvas.height;
                
                // –°–æ–∑–¥–∞–µ–º —Å–ª—É—á–∞–π–Ω—ã–π –≥—Ä–∞—Ñ–∏–∫
                ctx.beginPath();
                ctx.moveTo(0, height / 2);
                
                let prevY = height / 2;
                for (let x = 1; x < width; x += 5) {
                    const y = prevY + (Math.random() * 20 - 10);
                    ctx.lineTo(x, y);
                    prevY = y;
                }
                
                ctx.strokeStyle = coin === 'ton' ? '#1dd1a1' : 
                                  coin === 'btc' || coin === 'eth' ? '#4ecdc4' : '#ff6b6b';
                ctx.lineWidth = 2;
                ctx.stroke();
            });
        }
        
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
        window.onload = initCharts;
    </script>
</body>
</html>
